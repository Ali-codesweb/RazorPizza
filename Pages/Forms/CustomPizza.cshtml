@page
@model CustomPizzaModel

<div class="text-center container">
    <h1>Create your own Pizza !</h1>
    <form action="" method="post" class="mx-auto mb-5 rounded-5 alert-light col-4 bg-light p-4">
        <input type="text" asp-for=Pizza.PizzaName placeholder="Give your Pizza a Name...." class="form-control" />
        <input type="checkbox" asp-for=Pizza.TomatoSauce placeholder="Tomato Sauce...."  />Tomato Sauce <br/>
        <input type="checkbox" asp-for=Pizza.Cheese placeholder="Cheese...."  />Cheese <br/>
        <input type="checkbox" asp-for=Pizza.Peperoni placeholder="Peperoni...."  />Peperoni <br/>
        <input type="checkbox" asp-for=Pizza.Mushroom placeholder="Mushroom...."  />Mushroom <br/>
        <input type="checkbox" asp-for=Pizza.Tuna placeholder="Tuna...."  />Tuna <br/>
        <input type="checkbox" asp-for=Pizza.Pineapple placeholder="Pineapple...."  />Pineapple <br/>
        <input type="checkbox" asp-for=Pizza.Hame placeholder="Ham...."  />Ham <br/>
        <input type="checkbox" asp-for=Pizza.Beef placeholder="Beef...."  />Beef <br/>
        
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>

@* If we post in this , then the function will be defined and invoked in the same file name with cshtml.cs extension *@